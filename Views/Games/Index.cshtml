@using SeriesMoviesProjectver2.Models.Entity
@model List<Tbl_Games>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/Site.css" rel="stylesheet" />
<body>
    <form>

        <table class="table table-bordered" width="100%">

            <tr>
                <th>OYUN ADI</th>
                <th>YÖNETMEN</th>
                <th>TEKNOLOJİ</th>
                <th>ÇIKIŞ TARİHİ</th>
                <th>IMAGE</th>
                <th>KATEGORİ</th>
            </tr>
            @foreach (var games in Model)
            {
                <tr>
                    <td>@games.Gamename</td>
                    <td>@games.Director</td>
                    <td>@games.Technology</td>
                    <td>@games.ReleaseDate</td>
                    <td><img src="@games.Image" width="300px"></td>
                    <td>@games.Tbl_Category.CategoryName</td>
                </tr>
            }

        </table>



    </form>


</body>

